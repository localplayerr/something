local light = game.Lighting
 
light.Sky.StarCount = 0
 
light.ClockTime = 14
light.OutdoorAmbient = Color3.fromRGB(0,0,0)
light.Ambient = Color3.fromRGB(0,0,0)
light.Brightness = 3

while task.wait(1) do
    light.ClockTime += 0.0025
end

if light.ClockTime == 18 then
    for i = 900 , 0 , -1 do
        task.wait(1)
        light.Brightness -= 0.01
    end
end

if light.ClockTime == 10 then
    for i = 0 , 900 , 1 do
        task.wait(1)
        light.Brightness += 0.01
    end
end
